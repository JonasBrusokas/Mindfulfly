{
  "manifest_version": 2,
  "name": "mindfulfly",
  "version": "0.1a",
  "description": "Collect and track time statistics for certain time-sink websites (e.g. YouTube, Facebook, Instagram, Reddit, Twitter)",
  "homepage_url": "https://github.com/JonasBrusokas/Mindfulfly",
  "icons": {
    "48": "icons/chillout-48.png"
  },

  "permissions": [
    "alarms",
    "tabs",
    "storage"
  ],

  "page_action": {
    "default_icon": "icons/chillout-32.png",
    "default_title": "Chill out"
  },

  "background": {
    "scripts": ["background.js","mindfulfly.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_title": "Mindfulfly",
    "default_popup": "mindfulfly.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "58.0a1"
    }
  }

}
